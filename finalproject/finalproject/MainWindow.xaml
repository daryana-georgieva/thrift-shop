            </Button.Resources>
        </Button>
        <Label x:Name="shoplabel_Copy" Content="vtorata upotreba" FontSize="60" HorizontalAlignment="Center" FontFamily="/finalproject;component/resourcess/#Barriecito" Margin="705,-8,-299.4,689.4" Foreground="#FF5F60B9" Width="868"/>
