        <Label x:Name="signuplabel" Content="Create an account" HorizontalAlignment="Left" Margin="1088,247,0,1007.4" VerticalAlignment="Center" FontSize="72" FontFamily="./#Inter Thin" Width="619" RenderTransformOrigin="0.685,0.442"/>
        <Grid Margin="1038,358,206.6,394.4">
            <Grid Margin="-352,0,-193,-135">
