        <TextBox x:Name="cardnumtxt" FontFamily="Global Monospace" HorizontalAlignment="Left" Height="45" Margin="670,498,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="552" FontSize="24"/>
